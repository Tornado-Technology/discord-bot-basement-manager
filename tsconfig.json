{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2021",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "node_modules"
  ]
}